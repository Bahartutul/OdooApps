<?xml version="1.0"?>
<odoo>

    <record id="sale_order_form_quote" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale_management</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='optional_products']/field[@name='sale_order_option_ids']/tree/field[@name='name']" position="after">
                <field name="image_name" invisible="1"/>
                <field name="image" widget="image" filename="image_name" options='{"size": [120, 120]}'/>
            </xpath>
        </field>
    </record>
</odoo>